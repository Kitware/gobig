#! /usr/bin/env sh

. "{{ spark_install_root }}/sbin/spark-config.sh"
. "{{ spark_install_root }}/bin/load-spark-env.sh"

"{{ spark_install_root }}/bin/spark-class"                      \
    org.apache.spark.deploy.mesos.MesosClusterDispatcher        \
    --master "mesos://{{ mesos_zookeeper_url }}"                \
    --host "$( "{{ spark_install_root }}/bin/discover-ip.sh" )" \
    --port "{{ spark_dispatcher_port }}"

